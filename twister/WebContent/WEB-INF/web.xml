<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <servlet>
  	<servlet-name>signIn</servlet-name>
  	<servlet-class>servlets.SignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>signIn</servlet-name>
  	<url-pattern>/user/signin</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>signOut</servlet-name>
  	<servlet-class>servlets.SignOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>signOut</servlet-name>
  	<url-pattern>/user/signout</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>signUp</servlet-name>
  	<servlet-class>servlets.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>signUp</servlet-name>
  	<url-pattern>/user/signup</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>followFriend</servlet-name>
  	<servlet-class>servlets.FollowFriendServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>followFriend</servlet-name>
  	<url-pattern>/friend/follow</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>unfollowFriend</servlet-name>
  	<servlet-class>servlets.UnfollowFriendServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>unfollowFriend</servlet-name>
  	<url-pattern>/friend/unfollow</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>postMessage</servlet-name>
  	<servlet-class>servlets.PostMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>postMessage</servlet-name>
  	<url-pattern>/message/post</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>addComment</servlet-name>
  	<servlet-class>servlets.AddCommentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>addComment</servlet-name>
  	<url-pattern>/message/comment</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>searchMessage</servlet-name>
  	<servlet-class>servlets.SearchMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>searchMessage</servlet-name>
  	<url-pattern>/message/search</url-pattern>
  </servlet-mapping>
  <resource-ref>
  	<description>DB Connection</description>
  	<res-ref-name>jdbc/db</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
</web-app>